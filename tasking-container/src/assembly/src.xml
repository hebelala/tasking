<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>zip</id>

    <formats>
        <format>zip</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>com.github.hebelala:tasking-container:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/lib/lib</outputDirectory>
            <excludes>
                <exclude>com.github.hebelala:tasking-container:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>src/assembly/apps</directory>
            <outputDirectory>apps</outputDirectory>
            <excludes>
                <exclude>.gitkeep</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/assembly/bin</directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/assembly/logs</directory>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>.gitkeep</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>src/assembly/bin/tasking-container.sh</source>
            <outputDirectory>bin</outputDirectory>
            <destName>tasking-container.sh</destName>
            <fileMode>777</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
    </files>

</assembly>